# Database Configuration
MONGODB_URI=mongodb://localhost:27017/dashboard

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=1800000
RATE_LIMIT_MAX_REQUESTS=500

# Server Configuration
PORT=5000
NODE_ENV=development

# AI Services API Keys
HUGGING_FACE_TOKEN=your_hugging_face_token_here
TEXTRAZOR_API_KEY=your_textrazor_api_key_here

# Google Calendar OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:5000/api/calendar/google/callback
GOOGLE_OAUTH_SCOPES=https://www.googleapis.com/auth/calendar
GOOGLE_OAUTH_SUCCESS_REDIRECT=http://localhost:5173

# External APIs
YOUTUBE_API_KEY=your_youtube_api_key

# Cloudinary (file uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_FOLDER=dashpoint

# CORS Configuration
CLIENT_URL=http://localhost:5173

# Content Extraction Settings
MAX_CONTENT_LENGTH=10000
REQUEST_TIMEOUT=30000

# File Upload Settings
MAX_FILE_SIZE=10485760
